<h1 class="text text-center">All Products</h1>
<div class="container">
    <table class="table table-bordered table-striped table-hover table-active border-primary table-primary">
        <thead>
            <tr>
                <th>S.No</th>
                <th>User</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% if(product) { %>
                <% for(let i=0; i < product.length; i++) { %>
                    <tr>
                        <td>
                            <%= i + 1; %>
                        </td>
                        <td>
                            <%= product[i].userId; %>
                        </td>
                        <td>
                            <%= product[i].title; %>
                        </td>
                        <td>
                            <%= product[i].description; %>
                        </td>
                        <td>
                            <%= product[i].price; %>
                        </td>
                        <td>
                            <%= product[i].category; %>
                        </td>
                        <td>
                            <%= product[i].status; %>
                        </td>
                    </tr>
        </tbody>
        <% } %>
            <% } %>
    </table>
</div>