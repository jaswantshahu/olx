<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-12">
                            <form action="/register" method="post">
                                <div class="row mt-5">
                                    <% if(status && message){ let cls=(status=="Error" ) ? 'text-danger'
                                        : 'text-success' ; %>
                                        <div class="col-12">
                                            <h3 class="text <%= cls; %>">
                                                <%= message; %>
                                            </h3>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase">Registration</h3>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example1m"
                                                    class="form-control form-control-lg" name="firstName"
                                                    value="<%= userData.firstName; %>" />
                                                <label class="form-label" for="form3Example1m">First name</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example1n"
                                                    class="form-control form-control-lg" name="lastName"
                                                    value="<%= userData.lastName; %>" />
                                                <label class="form-label" for="form3Example1n">Last name</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="number" id="form3Example1m"
                                                    class="form-control form-control-lg" name="contact"
                                                    value="<%= userData.contact; %>" />
                                                <label class="form-label" for="form3Example1m">Contact no</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example1n"
                                                    class="form-control form-control-lg" name="password"
                                                    value="<%= userData.password; %>" />
                                                <label class="form-label" for="form3Example1n">Password</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example8" class="form-control form-control-lg"
                                            name="address" value="<%= userData.address; %>" />
                                        <label class="form-label" for="form3Example8">Address</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="email" id="form3Example97" class="form-control form-control-lg"
                                            name="emailId" value="<%= userData.emailId; %>" />
                                        <label class="form-label" for="form3Example97">Email ID</label>
                                    </div>

                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="submit" class="btn btn-warning btn-lg ms-2">Submit form</button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>